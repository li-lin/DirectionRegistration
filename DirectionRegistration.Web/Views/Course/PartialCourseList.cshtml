@using DirectionRegistration.Models
@model IList<CourseViewModel>
@foreach (CourseViewModel d in Model)
{
    <tr>
        <td class="col-md-6">@d.CourseName</td>
        <td class="col-md-2">@d.StudentCount</td>
        <td class="col-md-4">
            <button onclick="showModify('@d.Id')" class="btn btn-default" data-toggle="modal" data-target="#myModal">修改</button>
            @Ajax.ActionLink("删除", "Delete", "Course",
                         new { courseId = d.Id },
                         new AjaxOptions() { HttpMethod = "POST", OnSuccess = "onDelSuccess", LoadingElementId = "loading", Confirm = "确定要删除吗？" },
                         new { @class = "btn btn-warning" })
            <button onclick="showImportScore('@d.Id', this)" class="btn btn-default" data-toggle="modal" data-target="#myModal">导入成绩</button>
        </td>
    </tr>
}
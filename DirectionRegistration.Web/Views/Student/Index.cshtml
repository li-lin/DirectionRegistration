@model DirectionRegistration.Models.StudentInfoViewModel
@{
    ViewBag.Title = "学生管理";
}

<div class="alert alert-danger" style="display:none;" id="my-alert">
    <button class="close" type="button">&times;</button>
    <strong></strong>
</div>
<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">添加学生</h3>
    </div>
    <div class="panel-body">
        @using (Ajax.BeginForm("Add", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "onAddSuccess", LoadingElementId = "loading" }, new { @class = "form-inline" }))
        {
        <div class="row">
            <div class="form-group col-sm-2">
                <label class="sr-only" for="courseName">学号</label>
                @Html.TextBoxFor(model => model.Number, new { @class = "form-control", placeholder = "学号" })
            </div>
            <div class="form-group col-sm-2">
                <label class="sr-only" for="courseName">姓名</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "姓名" })
            </div>
            <div class="form-group col-sm-2">
                <label class="sr-only" for="courseName">性别</label>
                @Html.DropDownList("Gender", new List<SelectListItem>() {
               new SelectListItem {
                   Text ="男",
                   Selected =false,
                   Value ="男"},
               new SelectListItem { Text = "女",
                   Selected = true,
                   Value = "女" } }, new { @class = "form-control" })
            </div>
            <div class="form-group col-sm-3">
                <label class="sr-only" for="courseName">专业</label>
                @Html.DropDownListFor(model => model.Major, ViewBag.Majors as List<SelectListItem>, new { @class = "form-control" })
            </div>
            <div class="form-group col-sm-3">
                <button type="submit" class="btn btn-success">添加</button>
                @Html.ActionLink("导入", "UploadData", null, new { id = "btn-import", @class = "btn btn-success", data_remote = "false", data_toggle = "modal", data_target = "#myModal" })
                <a href="#" class="btn btn-default" id="btn-search" >搜索</a>               
                <img id="loading" style="display:none;" src="~/Content/Images/loading.gif" />
            </div>
        </div>
        }
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">学生列表</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-1">学号</th>
                    <th class="col-sm-1">姓名</th>
                    <th class="col-sm-1">性别</th>
                    <th class="col-sm-2">专业</th>
                    <th class="col-sm-4">操作</th>
                </tr>
            </thead>
            <tbody id="students">
                @Html.Action("GetStudents", "Student")
            </tbody>
        </table>
        <div>           
            <nav aria-label="Page navigation">
                <ul id="pager" class="pagination">                   
                    @for (int i = 0; i < (int)ViewBag.PageCount; i++)
                    {
                        if (i == (int)ViewBag.PageNumber - 1)
                        {
                            <li class="active" data-page="@i"><a href="#">@(i + 1)</a></li>
                        }
                        else
                        {
                            <li data-page="@i"><a href="#">@(i + 1)</a></li>
                        }
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.form.js"></script>
    <script>
        $(document).ready(function () {
            $('#btn-import').click(function () {
                handleModal({
                    title: '导入学生数据',
                    url: '@Url.Action("UploadData", "Student")',
                    submit: '保存'
                });
            });

            handlePage();//加载分页信息

            $('#btn-search').click(function () {
                var num = $('#Number').val();
                if (num.trim() == "") {
                    myAlert('学号必填');
                    return false;
                }
                $.post('@Url.Action("Search","Student")', { number: num }, function (data, status) {
                    $('#students').html(data);
                });
            });
        });

        function handlePage() {
            $('#pager li').click(function () {
                var pageNumber = $(this).attr('data-page');
                getStudentdByPage(pageNumber);

                $('#pager li').removeClass('active');
                $(this).addClass('active');
            });
        }

        function getStudentdByPage(pageNumber) {
            $.get('@Url.Action("GetStudents", "Student")',
                { PageCount: 0, PageNumber: pageNumber, PageSize: 0, SearchName: '', SearchMajor: '', SearchGender: '', SearchNumber: '' },
                function (data) {
                    $('#students').html(data);
                });
        }


        function showModify(id) {
            var url = '@Url.Action("Modify","Student")' + '/' + id;
            handleModal({
                title: '修改学生信息',
                url: url,
                submit: '保存'
            });
        }
        
        function onAddSuccess(d) {
            if (d.code == 1) {
                toastr.warning(d.data);
            } else {
                toastr.success('添加成功');
                $('#students').html(d);
            }
        }
        function onDelSuccess(d) {
            if (d.code == 1) {
                toastr.warning(d.data);
            } else {
                toastr.success('删除成功');
                $('#students').html(d);
            }
        }
        function onModifySuccess(d) {
            $('#myModal').modal('hide')
            if (d.code == 1) {
                toastr.warning(d.data);
            } else {
                toastr.success('修改成功');
                $('#students').html(d);
            }
        }
        function onRePasswordSuccess(d) {
            $('#myModal').modal('hide');
            if (d.code == 1) {
                toastr.warning(d.data);
            } else {
                toastr.success(d.data);
            }
        }
    </script>

}
@model DirectionRegistration.Models.TeacherViewModel

@using (Ajax.BeginForm("Modify", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "onModifySuccess", LoadingElementId = "loading" }, new { @class = "form" }))
{
    <div class="form-group">
        <label for="Name">姓名</label>
        @Html.HiddenFor(model => model.Id)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "姓名" })
    </div>
    <div class="form-group">
        <label for="LoginName">工号</label>
        @Html.TextBoxFor(model => model.LoginName, new { @class = "form-control", placeholder = "工号" })
    </div>
    <div class="form-group">
        <label>
            @Html.CheckBoxFor(model => model.IsSuper)是否为管理员?
        </label>
    </div>
}



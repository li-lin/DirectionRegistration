@model DirectionRegistration.Models.TeacherViewModel

@using (Ajax.BeginForm("Modify", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "onModifySuccess", LoadingElementId = "loading" }, new { @class = "form-inline" }))
{
    <div class="form-group col-sm-4">
        <label class="sr-only" for="courseName">姓名</label>
        @Html.HiddenFor(model => model.Id)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "姓名" })
    </div>
    <div class="form-group col-sm-4">
        <label class="sr-only" for="courseName">工号</label>
        @Html.TextBoxFor(model => model.LoginName, new { @class = "form-control", placeholder = "工号" })
    </div>
    <div class="form-group col-sm-2">
        <label>
            @Html.CheckBoxFor(model => model.IsSuper)管理员
        </label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">保存</button>
        <img id="loading" style="display:none;" src="~/Content/Images/loading.gif" />
    </div>
}


